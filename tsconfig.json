{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "lib": [
            "dom",
            "esnext"
        ],
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}